# Copy the configuration below and add it to your
# ~/.config/kitty/kitty.conf file

## Root Loops color scheme
## via https://rootloops.sh

# The basic colors
background              #1a2137
foreground              #e7ebf6
selection_background    #e7ebf6
selection_foreground    #1a2137

# Cursor colors
cursor_text_color       #e7ebf6
cursor                  #bcc6e3

# URL underline color when hovering with mouse
url_color               #d6a278

# Kitty window border colors
active_border_color     #bcc6e3
inactive_border_color   #586899
bell_border_color       #cd7d96

# Tab bar colors
active_tab_foreground   #e7ebf6
active_tab_background   #1a2137
inactive_tab_foreground #2e3859
inactive_tab_background #bcc6e3
tab_bar_background      #1a2137

# Colors for marks (marked text in the terminal)
mark1_foreground #e7ebf6
mark1_background #dc97ac
mark2_foreground #e7ebf6
mark2_background #d6a278
mark3_foreground #e7ebf6
mark3_background #a7b775

# The 16 terminal colors

# black
color0 #2e3859
color8 #586899

# red
color1 #cd7d96
color9 #dc97ac

# green
color2  #91a161
color10 #a7b775

# yellow
color3  #c18c60
color11 #d6a278

# blue
color4  #67a0c8
color12 #81b5da

# magenta
color5  #a28ace
color13 #b6a3dc

# cyan
color6  #61a89a
color14 #75bfb0

# white
color7  #bcc6e3
color15 #f5f6fb


# BEGIN_KITTY_FONTS
font_family      family='Iosevka Nerd Font' postscript_name=IosevkaNF-Medium
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS

font_size 12.5
