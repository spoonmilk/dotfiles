# BEGIN_KITTY_FONTS
font_family      family='JuliaMono Nerd Font' postscript_name=JetBrainsMonoNF-Medium
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size 15.0
# END_KITTY_FONTS

allow_remote_control yes

# BEGIN_KITTY_THEME
# Zenbones Light
include current-theme.conf
# END_KITTY_THEME

# kitty theme changing

# Switch to Light Theme
map ctrl+shift+alt+l kitten themes "Zenbones Light" 

# Switch to Dark Theme
map ctrl+shift+alt+d kitten themes "citylights"

# CURSOR TRAIL
# cursor_trail 1
# cursor_trail_decay 0.1 0.4

# WINDOW SETTINGS
hide_window_decorations yes
initial_window_width 100
initial_window_height 40
window_padding_width 10
window_padding_height 10

# SCROLLBAR SETTINGS
scrollbar_width 10
scrollbar_hide_when_typing yes
scrollbar_hide_when_mouse_idle yes

# BACKGROUND IMAGE SETTINGS
background_image /home/spoonmilk/Pictures/citizen-sleeper.png
background_image_layout cscaled
background_tint 0.9
dim_opacity 0.4
background_opacity 0.85
background_blur 2

# CONFIRM WINDOW CLOSE
confirm_os_window_close 0


