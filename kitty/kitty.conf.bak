allow_remote_control yes

# END_KITTY_THEME
# CURSOR TRAIL
# cursor_trail 1
# cursor_trail_decay 0.1 0.4

# PERFORMANCE TWEAKS
repaint_delay 5
input_delay 2

# WINDOW SETTINGS
hide_window_decorations yes
initial_window_width 100
initial_window_height 40
window_padding_width 10
window_padding_height 10

# SCROLLBAR SETTINGS
scrollbar_width 10
scrollbar_hide_when_typing yes
scrollbar_hide_when_mouse_idle yes

# BACKGROUND IMAGE SETTINGS
# background_image /home/spoonmilk/Pictures/wind-rises.jpg
# background_image_layout cscaled
# background_tint 0.9
# dim_opacity 0.4
background_opacity 0.95
background_blur 2

# CONFIRM WINDOW CLOSE
confirm_os_window_close 0

# BEGIN_KITTY_FONTS
font_family      family="JuliaMono Nerd Font"
font_size 15
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS

# BEGIN_KITTY_THEME
# Japanesque
include current-theme.conf
# END_KITTY_THEME
