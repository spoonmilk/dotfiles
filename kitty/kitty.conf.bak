# BEGIN_KITTY_FONTS
font_family      family="JetBrainsMono Nerd Font"
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size 12.5
# END_KITTY_FONTS

allow_remote_control yes

# BEGIN_KITTY_THEME
# Kaolin Breeze
include current-theme.conf
# END_KITTY_THEME

# kitty theme changing

# Switch to Light Theme
map ctrl+shift+alt+l kitten themes "Kaolin Breeze" 

# Switch to Dark Theme
map ctrl+shift+alt+d kitten themes "Tokyo Night"

# Kitty binds

